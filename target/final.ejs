<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        Result Management System
    </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <style>
        h3 {
            text-align: center;
            margin-top: 40px;
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td,
        th {
            border: 1px solid #dddddd;

            padding: 8px;
            height: 50px;
            width: 60px;
            text-align: center;
            border-collapse: collapse;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .navbar-custom {
            background-color: #8fbc8f;
            border: 3px solid #556b2f;

        }

        .button1:active {
            background-color: #f0e68c;
            box-shadow: 0 5px #666;
            transform: translateY(4px);
        }

        .navbar-custom {
            height: 80px;
        }

        .headertekst {
            left: 0;
            right: 0;
            width: 100%;
            text-align: center;
        }

        .button {
            border-radius: 4px;
            padding: 12px 28px;
            background-color: #008CBA;

            border: none;
            color: white;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
        }

        .container {
            margin: auto;
            width: 50%;
            /* border: 3px solid green; */
            padding: 10px;
        }
    </style>
</head>
<nav class="navbar-custom">
    <div class="container-fluid">

        <header>
            <h2 class="headertekst"><b>Result Management System</b></h2>

        </header>

    </div>
</nav>

<body>
    <a href="/home" style="float:right" class="button mt-4 mr-4">Logout</a>
    <a href="/student" style="float:left" class="button mt-4 ml-4">Back</a>

    <div class="container" align="center">
        <!-- <h3 align="center">Result Management System</h3> -->

        <table class="table table-striped table-hover">
            <tbody align="center">
                <tr>
                    <h3><b>Result</b></h3>
                </tr>
                <% users.forEach(function(user){ %>
                    <tr height="30px">
                        <td>Roll No </td>
                        <td>
                            <%= user.Roll_no %>
                        </td>
                    </tr>
                    <tr height="30px">
                        <td>Student Name </td>
                        <td>
                            <%= user.Name %>
                        </td>
                    </tr>
                    <tr height="30px">
                        <td>Date Of Birth </td>
                        <td>
                            <%= user.DateOfBirth %>
                        </td>
                    </tr>
                    <tr height="30px">
                        <td>Score </td>
                        <td>
                            <%= user.Score %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

</body>

</html>